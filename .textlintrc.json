{
  "plugins": {
    "@textlint/markdown": {
      "extensions": [".md"]
    }
  },
  "rules": {
    "preset-ja-spacing": {
      "ja-space-around-code": {
        "after": true,
        "before": true
      },
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "preset-ja-technical-writing": {
      "ja-no-mixed-period": {
        "allowPeriodMarks": [":"]
      },
      "ja-no-weak-phrase": false,
      "max-comma": false,
      "no-doubled-joshi": {
        "strict": false,
        "allow": ["か", "で"]
      },
      "no-exclamation-question-mark": false,
      "sentence-length": false
    }
  }
}
